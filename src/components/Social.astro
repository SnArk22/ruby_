---
const { platform, username } = Astro.props;
---
<a href={`https://www.${platform}.com/${username}`}>{platform}</a>

<style>
    footer {
        text-align: center;
        padding: 1rem;
        background-color: #f8f9fa;
        border-top: 1px solid #dee2e6;
    }
    
    footer a {
        color: #007bff;
        text-decoration: none;
    }
    
    footer a:hover {
        text-decoration: underline;
    }
</style>